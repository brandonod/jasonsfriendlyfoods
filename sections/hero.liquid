<!-- sections/hero.liquid -->
<section class="hero">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subtext }}</p>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to My Store"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext"
    }
  ]
}
{% endschema %}
