<!-- sections/hero.liquid -->
<section id="hero" class="hero-section">
  <video autoplay muted loop playsinline class="hero-video">
    {% if section.settings.hero_video != blank %}
      <source src="{{ section.settings.hero_video }}" type="video/mp4">
    {% else %}
      <source src="https://cdn.shopify.com/videos/c/o/v/ee53bcc9634644a0a44d8a1e80e86d05.mp4" type="video/mp4">
    {% endif %}
    <img src="{{ section.settings.hero_image | image_url: '720x' }}" alt="{{ section.settings.hero_image.alt }}">
  </video>

  <div class="hero-content">
    <h3 class="subheadline">{{ section.settings.subheadline }}</h3>
    <h1>{{ section.settings.headline }}</h1>
    <button>{{ section.settings.button }}</button>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "url",
      "id": "hero_video",
      "label": "Hero video URL",
      "info": "Upload your MP4 video to Files and paste the URL here"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Where Delicious Meets Healthy"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Chocolate snacks made with friendly ingredients"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button text",
      "default": "SHOP ALL FRIENDLY FOODS"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
