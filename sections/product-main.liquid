<script>
document.addEventListener('DOMContentLoaded', function() {
  // Quantity selector functionality
  const minusBtn = document.querySelector('.quantity-selector__btn--minus');
  const plusBtn = document.querySelector('.quantity-selector__btn--plus');
  const quantityInput = document.querySelector('.quantity-selector__input');

  minusBtn.addEventListener('click', function() {
    const currentValue = parseInt(quantityInput.value);
    if (currentValue > 1) {
      quantityInput.value = currentValue - 1;
    }
  });

  plusBtn.addEventListener('click', function() {
    const currentValue = parseInt(quantityInput.value);
    quantityInput.value = currentValue + 1;
  });

  // Purchase type toggle
  const purchaseRadios = document.querySelectorAll('input[name="purchase-type"]');
  const frequencySelect = document.querySelector('.frequency-select');

  purchaseRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      if (this.value === 'subscribe') {
        frequencySelect.style.display = 'block';
      } else {
        frequencySelect.style.display = 'none';
      }
    });
  });
});
